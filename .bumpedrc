files: [
  "package.json"
  "bower.json"
]

plugins:
  postrelease:

    'Compile browser version':
      plugin: 'bumped-terminal'
      command: 'gulp'

    'Generating CHANGELOG file':
      plugin: 'bumped-changelog'

    'Commit the new version':
      plugin: 'bumped-terminal'
      command: 'git add . && git commit -m "$newVersion releases"'
